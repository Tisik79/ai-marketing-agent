# AI Marketing Agent - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - Application
# ===========================================

# Server port and host
PORT=3000
HOST=0.0.0.0

# Base URL for webhooks (used in approval emails)
# Change to your server's IP address or domain
BASE_URL=http://192.168.1.100:3000

# ===========================================
# REQUIRED - Anthropic AI
# ===========================================

# Your Anthropic API key
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===========================================
# REQUIRED - Facebook
# ===========================================

# Facebook App credentials
FACEBOOK_APP_ID=your_app_id
FACEBOOK_APP_SECRET=your_app_secret

# Facebook Page ID
FACEBOOK_PAGE_ID=123456789012345

# Facebook Ad Account ID (format: act_XXXXXXXXXX)
FACEBOOK_ACCOUNT_ID=act_123456789012345

# Facebook Access Token (Page Access Token with required permissions)
FACEBOOK_ACCESS_TOKEN=EAAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===========================================
# REQUIRED - Email (SMTP)
# ===========================================

# SMTP server settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email addresses
EMAIL_FROM=AI Marketing Agent <your-email@gmail.com>
EMAIL_TO=notifications@your-company.cz

# ===========================================
# OPTIONAL - Agent Configuration
# ===========================================

# Agent name
AGENT_NAME=Marketing Agent

# Monthly budget in CZK
MONTHLY_BUDGET=10000

# Daily spending limit in CZK
DAILY_LIMIT=500

# Budget alert threshold (percentage)
BUDGET_ALERT_THRESHOLD=80

# ===========================================
# OPTIONAL - Security
# ===========================================

# Basic authentication for dashboard (user:password)
AUTH_USER=admin
AUTH_PASS=changeme

# ===========================================
# OPTIONAL - Logging
# ===========================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path (leave empty for console only)
LOG_FILE=logs/agent.log

# ===========================================
# OPTIONAL - Scheduler
# ===========================================

# Enable/disable scheduled tasks
SCHEDULER_ENABLED=true

# Timezone for scheduler (default: Europe/Prague)
TZ=Europe/Prague

# ===========================================
# OPTIONAL - Database
# ===========================================

# SQLite database file path
DATABASE_PATH=data/agent.db
