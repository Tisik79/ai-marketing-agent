{
  "name": "facebook-ads-mcp-server",
  "version": "1.0.0",
  "description": "MCP server pro zadávání a vyhodnocování reklamních kampaní na Facebooku pomocí Claude AI",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:agent": "tsc -p tsconfig.agent.json",
    "start": "node dist/index.js",
    "start:agent": "node dist/main.js",
    "dev": "ts-node src/index.ts",
    "dev:agent": "ts-node src/main.ts",
    "watch": "tsc -w",
    "lint": "eslint src/**/*.ts",
    "test": "jest"
  },
  "keywords": [
    "mcp",
    "facebook",
    "advertising",
    "claude",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@modelcontextprotocol/sdk": "latest",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "facebook-nodejs-business-sdk": "^18.0.4",
    "form-data": "^4.0.5",
    "helmet": "^8.1.0",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.12",
    "uuid": "^13.0.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.18",
    "@types/facebook-nodejs-business-sdk": "^20.0.3",
    "@types/node": "^20.8.2",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.4",
    "@types/uuid": "^10.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
